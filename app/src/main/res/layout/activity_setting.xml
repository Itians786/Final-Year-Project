<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBEB"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_newInfoName"
            android:textColor="#000000"
            android:hint="Add new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </EditText>

        <EditText
            android:id="@+id/et_newInfoMobile"
            android:textColor="#000000"
            android:hint="Add new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </EditText>

        <EditText
            android:id="@+id/et_newInfoMail"
            android:textColor="#000000"
            android:hint="Add new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="250sp"
        android:background="#2EAA51"
        android:padding="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/settings_imageView"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:src="@drawable/profile"
            android:background="@drawable/textedit"
            />

        <Button
            android:id="@+id/changePic"
            android:text="Change Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECEBEB"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="4dp"
                    android:text="Name"
                    android:textColor="#AFA4A4"
                    android:textSize="20dp" />


                <TextView

                    android:id="@+id/e_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textColor="#AFA4A4"
                    android:textSize="20dp" />

                <Button

                    android:id="@+id/edit_n"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="15dp"

                    android:background="#fff"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:textAllCaps="false"
                    android:textSize="18dp" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="55dp"
                    android:background="#666464" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="75dp"
                    android:drawableLeft="@drawable/mobile"
                    android:drawablePadding="4dp"
                    android:text="Mobile"
                    android:textColor="#AFA4A4"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/e_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="75dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Mobile"
                    android:textColor="#AFA4A4"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/edit_m"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="75dp"
                    android:background="#ffff"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:textAllCaps="false"
                    android:textSize="18dp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="115dp"
                    android:background="#666464" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="135dp"
                    android:drawableLeft="@drawable/email_"
                    android:drawablePadding="4dp"
                    android:text="Email"
                    android:textColor="#AFA4A4"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/e_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="135dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Email"
                    android:textColor="#AFA4A4"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/edit_e"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="135dp"
                    android:background="#fff"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:textAllCaps="false"
                    android:textSize="18dp"

                    />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="175dp"
                    android:background="#666464" />

                <Button
                    android:id="@+id/edit_f"
                    android:layout_width="410dp"
                    android:layout_height="65dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="180dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/lock"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:drawablePadding="4dp"
                    android:padding="15dp"
                    android:text="Forget Password"
                    android:textAlignment="textStart"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="245dp"
                    android:background="#666464"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="#ffff">

                <Button
                    android:id="@+id/edit_r"
                    android:layout_width="410dp"
                    android:layout_height="65dp"
                    android:layout_gravity="start"
                    android:background="#fff"
                    android:drawableLeft="@drawable/star"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:drawablePadding="4dp"
                    android:padding="15dp"
                    android:text="Rate The App"
                    android:textAlignment="textStart"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="62dp"
                    android:background="#666464"

                    />

            </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100sp">

</LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
